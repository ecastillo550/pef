<section id="pagecontent" layout="row" layout-sm="column" flex ng-controller="ClienteController">
<style type="text/css">
	.tajetaConfig {
		width: 100%;
	}
</style>
<md-card class="tajetaConfig">
	<img ng-src="{{imagePath}}" class="md-card-image">
	<md-card-content>
		<h2 class="md-title">Configuración de Empresa</h2>
		<p><strong>Empresa:</strong> {{usuarioPyme.empresa}}</p>
		<p><strong>RFC:</strong> {{usuarioPyme.rfc}}</p>
		<p><strong>Dirección:</strong> {{usuarioPyme.calle}}</p>
		<p><strong>Código postal:</strong> {{usuarioPyme.cp}}</p>
		<br>
		<h2 class="md-title">Configuración de Cuenta</h2>
		<p><strong>Nombre:</strong> {{usuarioPyme.nombre}}</p>
		<p><strong>Apellido paterno:</strong> {{usuarioPyme.apellido_paterno}}</p>
		<p><strong>Apellido materno:</strong> {{usuarioPyme.apellido_materno}}</p>
	</md-card-content>
	<div class="md-actions" layout="row" layout-align="end center">
		<md-button>Modificar</md-button>
	</div>
</md-card>

<md-card class="tajetaConfig">
	<img ng-src="{{imagePath}}" class="md-card-image">
	<md-card-content>
		<h2 class="md-title">Configuración de Identidad</h2>
		<p>
			Identidad
		</p>
		<div>
			<form >
				<span>Logotipo</span>
				<div class="col s12 m12 center-align">
					<md-button md-no-ink class="md-primary md-raised" ngf-select ng-model="logoFormData.file" accept="image/*">Seleccionar imagen</md-button>
				</div>
				<img class="profile-thumb" ngf-src="logoFormData.profile_path" ng-hide="logoFormData.file"/>
				<div ng-show="logoFormData.file" ngf-drop ng-model="logoFormData.file" ngf-pattern="image/*" class="cropArea">
					<img-crop image="logoFormData.file | ngfDataUrl" result-image="logoFormData.croppedDataUrl" ng-init="logoFormData.croppedDataUrl=''"></img-crop>
				</div>
				<div style="text-align: center;" ng-show="logoFormData.file">
					<img style="border-radius: 50%; margin: 0 auto;" ng-src="{{logoFormData.croppedDataUrl}}" />
				</div>
				<md-button md-no-ink ng-show="logoFormData.file" ng-click="uploadLogo()" class="md-primary md-raised">Cargar Imagen</md-button>
			</form>
		</div>
		<div style="margin-top: 20px;">
			<span>Color primario: </span>
			<color-picker ng-model="usuarioPyme.primary_color" color-picker-format="'hex'" color-picker-swatch="true" color-picker-swatch-only="true" color-picker-alpha="false"></color-picker>
		</div>
		<div>
			<span>Color secundario: </span>
			<color-picker ng-model="usuarioPyme.secondary_color" color-picker-format="'hex'" color-picker-swatch="true" color-picker-swatch-only="true" color-picker-alpha="false"></color-picker>
		</div>
		<br>
		<md-button md-no-ink ng-click="uploadColors()" class="md-accent md-raised">Cargar Colores</md-button>
	</md-card-content>
</md-card>
</section>